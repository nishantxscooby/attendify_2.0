FROM python:3.11-slim
RUN apt-get update && apt-get install -y --no-install-recommends ffmpeg libsm6 libxext6 build-essential && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY requirements.facenet.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt
COPY facenet_service/ /app/facenet_service/
ENV PORT=8001 PYTHONUNBUFFERED=1
CMD ["bash","-lc","gunicorn -w 2 -b 0.0.0.0:${PORT} facenet_service.facenet_service:app"]
